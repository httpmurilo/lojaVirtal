@model List<Produto>;
<h3>Catálogo</h3>


<div id="my-carousel" class="carousel slide" data-ride="carousel">
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
   <!-- paginacao tela de carrosel -->
        @{
         
            const int TAMANHO_PAGINA = 4;

           int paginas = (int)Math.Ceiling((double)Model.Count() / TAMANHO_PAGINA);
        }
          <!-- paginacao tela de carrosel -->
        @for (int pagina = 0; pagina < paginas; pagina++)
        {
  

  <!-- paginacao tela de carrosel -->
        <div class="item @(pagina ==0 ? "active" : "")">
            <div class="row">
  <!-- paginacao tela de carrosel -->
                @{
                    var produtosDaPagina = Model.Skip(pagina * TAMANHO_PAGINA).Take(TAMANHO_PAGINA);
                }
                @foreach (var item in produtosDaPagina)
                {
                    <div class="col-md-3 col-sm-3 col-lg-3">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <img class="img-produto-carrossel" src="/images/produtos/large_@(item.Codigo).jpg" />
                            </div>
                            <div class="panel-footer produto-footer">
                                <div class="produto-nome">@item.Nome</div>
                                <div><h4><strong>R$ @item.Preco</strong></h4></div>
                                <div class="text-center">
                                    <a href="/" class="btn btn-success">Adicionar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
  

        </div>
                  
      }
    </div>


    <!-- Controls -->
    <a class="left carousel-control" href="#my-carousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#my-carousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>